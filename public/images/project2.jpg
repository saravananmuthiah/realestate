<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="sky" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E0F6FF;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="building" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FFFFFF;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#F5F5F5;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E8E8E8;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Sky background -->
  <rect width="400" height="300" fill="url(#sky)"/>

  <!-- Ground -->
  <rect x="0" y="200" width="400" height="100" fill="#90EE90"/>

  <!-- Modern apartment building -->
  <rect x="80" y="80" width="240" height="120" fill="url(#building)" stroke="#CCCCCC" stroke-width="2"/>

  <!-- Floors -->
  <line x1="80" y1="110" x2="320" y2="110" stroke="#E0E0E0" stroke-width="1"/>
  <line x1="80" y1="140" x2="320" y2="140" stroke="#E0E0E0" stroke-width="1"/>
  <line x1="80" y1="170" x2="320" y2="170" stroke="#E0E0E0" stroke-width="1"/>

  <!-- Windows -->
  <rect x="100" y="85" width="20" height="15" fill="#87CEEB" stroke="#999999" stroke-width="1"/>
  <rect x="130" y="85" width="20" height="15" fill="#87CEEB" stroke="#999999" stroke-width="1"/>
  <rect x="250" y="85" width="20" height="15" fill="#87CEEB" stroke="#999999" stroke-width="1"/>
  <rect x="280" y="85" width="20" height="15" fill="#87CEEB" stroke="#999999" stroke-width="1"/>

  <rect x="100" y="115" width="20" height="15" fill="#87CEEB" stroke="#999999" stroke-width="1"/>
  <rect x="130" y="115" width="20" height="15" fill="#87CEEB" stroke="#999999" stroke-width="1"/>
  <rect x="250" y="115" width="20" height="15" fill="#87CEEB" stroke="#999999" stroke-width="1"/>
  <rect x="280" y="115" width="20" height="15" fill="#87CEEB" stroke="#999999" stroke-width="1"/>

  <rect x="100" y="145" width="20" height="15" fill="#87CEEB" stroke="#999999" stroke-width="1"/>
  <rect x="130" y="145" width="20" height="15" fill="#87CEEB" stroke="#999999" stroke-width="1"/>
  <rect x="250" y="145" width="20" height="15" fill="#87CEEB" stroke="#999999" stroke-width="1"/>
  <rect x="280" y="145" width="20" height="15" fill="#87CEEB" stroke="#999999" stroke-width="1"/>

  <!-- Balconies -->
  <rect x="95" y="100" width="60" height="8" fill="#D2691E" stroke="#8B4513" stroke-width="1"/>
  <rect x="245" y="100" width="60" height="8" fill="#D2691E" stroke="#8B4513" stroke-width="1"/>
  <rect x="95" y="130" width="60" height="8" fill="#D2691E" stroke="#8B4513" stroke-width="1"/>
  <rect x="245" y="130" width="60" height="8" fill="#D2691E" stroke="#8B4513" stroke-width="1"/>
  <rect x="95" y="160" width="60" height="8" fill="#D2691E" stroke="#8B4513" stroke-width="1"/>
  <rect x="245" y="160" width="60" height="8" fill="#D2691E" stroke="#8B4513" stroke-width="1"/>

  <!-- Main entrance -->
  <rect x="180" y="160" width="40" height="40" fill="#8B4513" stroke="#654321" stroke-width="2"/>
  <circle cx="190" cy="175" r="2" fill="#FFD700"/>
  <circle cx="210" cy="175" r="2" fill="#FFD700"/>

  <!-- Indian architectural elements -->
  <polygon points="170,80 200,50 230,80" fill="#DC143C" stroke="#8B0000" stroke-width="1"/>
  <circle cx="200" cy="60" r="5" fill="#FFD700" stroke="#FFA500" stroke-width="1"/>

  <!-- Garden -->
  <circle cx="150" cy="230" r="20" fill="#228B22"/>
  <circle cx="250" cy="230" r="20" fill="#228B22"/>
  <rect x="130" y="210" width="40" height="40" fill="#228B22"/>
  <rect x="230" y="210" width="40" height="40" fill="#228B22"/>

  <!-- Title -->
  <text x="200" y="20" text-anchor="middle" fill="#8B4513" font-family="serif" font-size="16" font-weight="bold">Luxury Indian Apartment</text>
</svg>
