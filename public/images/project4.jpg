<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="sky" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E6E6FA;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="house" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#FFFFFF;stop-opacity:1" />
      <stop offset="30%" style="stop-color:#F8F8FF;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E6E6FA;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Sky background -->
  <rect width="400" height="300" fill="url(#sky)"/>

  <!-- Ground -->
  <rect x="0" y="240" width="400" height="60" fill="#90EE90"/>

  <!-- Main house structure -->
  <rect x="120" y="140" width="160" height="100" fill="url(#house)" stroke="#CCCCCC" stroke-width="2"/>

  <!-- Modern flat roof -->
  <rect x="110" y="130" width="180" height="15" fill="#708090" stroke="#2F4F4F" stroke-width="1"/>
  <rect x="115" y="135" width="170" height="5" fill="#D3D3D3" stroke="#A9A9A9" stroke-width="1"/>

  <!-- Large windows -->
  <rect x="135" y="155" width="35" height="25" fill="#87CEEB" stroke="#999999" stroke-width="1"/>
  <rect x="180" y="155" width="35" height="25" fill="#87CEEB" stroke="#999999" stroke-width="1"/>
  <rect x="230" y="155" width="35" height="25" fill="#87CEEB" stroke="#999999" stroke-width="1"/>

  <!-- Ground floor windows -->
  <rect x="135" y="190" width="35" height="25" fill="#87CEEB" stroke="#999999" stroke-width="1"/>
  <rect x="180" y="190" width="35" height="25" fill="#87CEEB" stroke="#999999" stroke-width="1"/>
  <rect x="230" y="190" width="35" height="25" fill="#87CEEB" stroke="#999999" stroke-width="1"/>

  <!-- Main entrance -->
  <rect x="190" y="200" width="20" height="40" fill="#8B4513" stroke="#654321" stroke-width="2"/>
  <circle cx="195" cy="215" r="2" fill="#FFD700"/>
  <circle cx="205" cy="215" r="2" fill="#FFD700"/>

  <!-- Modern balcony -->
  <rect x="125" y="175" width="150" height="8" fill="#C0C0C0" stroke="#808080" stroke-width="1"/>
  <rect x="120" y="175" width="8" height="25" fill="#C0C0C0" stroke="#808080" stroke-width="1"/>
  <rect x="272" y="175" width="8" height="25" fill="#C0C0C0" stroke="#808080" stroke-width="1"/>

  <!-- Glass railing -->
  <rect x="128" y="183" width="144" height="17" fill="#E6E6FA" stroke="#D3D3D3" stroke-width="1" opacity="0.7"/>
  <line x1="128" y1="190" x2="272" y2="190" stroke="#87CEEB" stroke-width="1"/>
  <line x1="128" y1="195" x2="272" y2="195" stroke="#87CEEB" stroke-width="1"/>
  <line x1="128" y1="200" x2="272" y2="200" stroke="#87CEEB" stroke-width="1"/>

  <!-- Side extension -->
  <rect x="80" y="160" width="40" height="60" fill="url(#house)" stroke="#CCCCCC" stroke-width="1"/>
  <rect x="280" y="160" width="40" height="60" fill="url(#house)" stroke="#CCCCCC" stroke-width="1"/>

  <!-- Garden -->
  <circle cx="60" cy="260" r="18" fill="#228B22"/>
  <circle cx="340" cy="260" r="18" fill="#228B22"/>
  <rect x="40" y="240" width="40" height="40" fill="#228B22"/>
  <rect x="320" y="240" width="40" height="40" fill="#228B22"/>

  <!-- Modern Indian elements -->
  <circle cx="200" y="125" r="8" fill="#FFD700" stroke="#FFA500" stroke-width="2"/>
  <path d="M185 125 Q200 110 215 125" fill="none" stroke="#FFA500" stroke-width="2"/>

  <!-- Solar panels -->
  <rect x="85" y="150" width="25" height="8" fill="#2F4F4F" stroke="#000000" stroke-width="1"/>
  <rect x="285" y="150" width="25" height="8" fill="#2F4F4F" stroke="#000000" stroke-width="1"/>
  <rect x="87" y="152" width="21" height="4" fill="#000080" stroke="#000000" stroke-width="0.5"/>
  <rect x="287" y="152" width="21" height="4" fill="#000080" stroke="#000000" stroke-width="0.5"/>

  <!-- Pathway -->
  <rect x="185" y="240" width="30" height="50" fill="#D2B48C" stroke="#8B4513" stroke-width="1"/>
  <rect x="190" y="255" width="20" height="35" fill="#F5DEB3" stroke="#D2691E" stroke-width="1"/>

  <!-- Title -->
  <text x="200" y="20" text-anchor="middle" fill="#8B4513" font-family="serif" font-size="16" font-weight="bold">Contemporary Indian House</text>
</svg>
