<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="sky" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#E0F6FF;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="building" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#8B4513;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#D2691E;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#A0522D;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Sky background -->
  <rect width="400" height="300" fill="url(#sky)"/>

  <!-- Ground -->
  <rect x="0" y="250" width="400" height="50" fill="#90EE90"/>

  <!-- Main villa structure -->
  <rect x="50" y="120" width="300" height="130" fill="url(#building)" stroke="#654321" stroke-width="2"/>

  <!-- Roof -->
  <polygon points="40,120 200,60 360,120" fill="#8B0000" stroke="#654321" stroke-width="2"/>
  <polygon points="45,125 200,70 355,125" fill="#DC143C" stroke="#8B0000" stroke-width="1"/>

  <!-- Windows -->
  <rect x="80" y="140" width="40" height="30" fill="#87CEEB" stroke="#654321" stroke-width="1"/>
  <rect x="140" y="140" width="40" height="30" fill="#87CEEB" stroke="#654321" stroke-width="1"/>
  <rect x="220" y="140" width="40" height="30" fill="#87CEEB" stroke="#654321" stroke-width="1"/>
  <rect x="280" y="140" width="40" height="30" fill="#87CEEB" stroke="#654321" stroke-width="1"/>

  <!-- Door -->
  <rect x="180" y="180" width="40" height="70" fill="#8B4513" stroke="#654321" stroke-width="2"/>
  <circle cx="190" cy="210" r="3" fill="#FFD700"/>

  <!-- Balcony -->
  <rect x="70" y="170" width="260" height="10" fill="#D2691E" stroke="#8B4513" stroke-width="1"/>
  <rect x="65" y="170" width="10" height="40" fill="#D2691E" stroke="#8B4513" stroke-width="1"/>
  <rect x="325" y="170" width="10" height="40" fill="#D2691E" stroke="#8B4513" stroke-width="1"/>

  <!-- Pillars -->
  <rect x="75" y="180" width="8" height="70" fill="#F5DEB3" stroke="#D2691E" stroke-width="1"/>
  <rect x="317" y="180" width="8" height="70" fill="#F5DEB3" stroke="#D2691E" stroke-width="1"/>

  <!-- Garden elements -->
  <circle cx="100" cy="270" r="15" fill="#228B22"/>
  <circle cx="300" cy="270" r="15" fill="#228B22"/>
  <rect x="85" y="255" width="30" height="30" fill="#228B22"/>
  <rect x="285" y="255" width="30" height="30" fill="#228B22"/>

  <!-- Traditional Indian elements -->
  <circle cx="200" cy="90" r="8" fill="#FFD700" stroke="#FFA500" stroke-width="2"/>
  <path d="M190 90 Q200 80 210 90" fill="none" stroke="#FFA500" stroke-width="2"/>

  <!-- Title -->
  <text x="200" y="20" text-anchor="middle" fill="#8B4513" font-family="serif" font-size="16" font-weight="bold">Modern Indian Villa</text>
</svg>
