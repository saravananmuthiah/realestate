<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="sky" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#87CEEB;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#F0F8FF;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="ecoHouse" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#98FB98;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#90EE90;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#32CD32;stop-opacity:1" />
    </linearGradient>
  </defs>

  <!-- Sky background -->
  <rect width="400" height="300" fill="url(#sky)"/>

  <!-- Ground -->
  <rect x="0" y="230" width="400" height="70" fill="#228B22"/>

  <!-- Eco-friendly house structure -->
  <rect x="120" y="150" width="160" height="80" fill="#F5F5DC" stroke="#8B4513" stroke-width="2"/>

  <!-- Green roof -->
  <rect x="110" y="140" width="180" height="15" fill="url(#ecoHouse)" stroke="#006400" stroke-width="1"/>
  <rect x="115" y="145" width="170" height="5" fill="#228B22" stroke="#006400" stroke-width="1"/>

  <!-- Large energy-efficient windows -->
  <rect x="135" y="165" width="30" height="20" fill="#87CEEB" stroke="#4682B4" stroke-width="1"/>
  <rect x="175" y="165" width="30" height="20" fill="#87CEEB" stroke="#4682B4" stroke-width="1"/>
  <rect x="235" y="165" width="30" height="20" fill="#87CEEB" stroke="#4682B4" stroke-width="1"/>

  <!-- Ground floor windows -->
  <rect x="135" y="195" width="30" height="20" fill="#87CEEB" stroke="#4682B4" stroke-width="1"/>
  <rect x="175" y="195" width="30" height="20" fill="#87CEEB" stroke="#4682B4" stroke-width="1"/>
  <rect x="235" y="195" width="30" height="20" fill="#87CEEB" stroke="#4682B4" stroke-width="1"/>

  <!-- Main entrance -->
  <rect x="190" y="200" width="20" height="30" fill="#8B4513" stroke="#654321" stroke-width="2"/>
  <circle cx="195" cy="210" r="2" fill="#FFD700"/>
  <circle cx="205" cy="210" r="2" fill="#FFD700"/>

  <!-- Solar panels on roof -->
  <rect x="130" y="135" width="25" height="8" fill="#2F4F4F" stroke="#000000" stroke-width="1"/>
  <rect x="165" y="135" width="25" height="8" fill="#2F4F4F" stroke="#000000" stroke-width="1"/>
  <rect x="200" y="135" width="25" height="8" fill="#2F4F4F" stroke="#000000" stroke-width="1"/>
  <rect x="235" y="135" width="25" height="8" fill="#2F4F4F" stroke="#000000" stroke-width="1"/>

  <!-- Rainwater harvesting system -->
  <rect x="100" y="225" width="15" height="25" fill="#4169E1" stroke="#000080" stroke-width="1"/>
  <rect x="285" y="225" width="15" height="25" fill="#4169E1" stroke="#000080" stroke-width="1"/>
  <circle cx="107.5" cy="220" r="8" fill="#87CEEB" stroke="#4682B4" stroke-width="1"/>
  <circle cx="292.5" cy="220" r="8" fill="#87CEEB" stroke="#4682B4" stroke-width="1"/>

  <!-- Green elements -->
  <circle cx="50" cy="250" r="20" fill="#32CD32"/>
  <circle cx="350" cy="250" r="20" fill="#32CD32"/>
  <circle cx="80" cy="240" r="15" fill="#228B22"/>
  <circle cx="320" cy="240" r="15" fill="#228B22"/>

  <!-- Wind turbine -->
  <line x1="60" y1="200" x2="60" y2="180" stroke="#C0C0C0" stroke-width="2"/>
  <circle cx="60" cy="175" r="3" fill="#808080"/>
  <line x1="55" y1="175" x2="65" y2="175" stroke="#808080" stroke-width="1"/>
  <line x1="60" y1="170" x2="60" y2="180" stroke="#808080" stroke-width="1"/>

  <!-- Compost area -->
  <rect x="320" y="200" width="25" height="20" fill="#8B4513" stroke="#654321" stroke-width="1"/>
  <rect x="55" y="200" width="25" height="20" fill="#8B4513" stroke="#654321" stroke-width="1"/>

  <!-- Title -->
  <text x="200" y="20" text-anchor="middle" fill="#006400" font-family="serif" font-size="16" font-weight="bold">Eco-Friendly Indian Home</text>
</svg>
